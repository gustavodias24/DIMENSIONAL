<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.camera.view.PreviewView
        android:id="@+id/camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.camera.view.PreviewView>

    <ImageButton
        android:id="@+id/maisred"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120sp"
        android:layout_marginEnd="40sp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerCrop"
        android:src="@raw/plusred"
         />

    <ImageButton
        android:id="@+id/menosred"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_below="@+id/maisred"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="40sp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerCrop"
        android:src="@raw/negativered"
        />

    <ImageButton
        android:id="@+id/maisyelow"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120sp"
        android:layout_marginStart="40sp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerCrop"
        android:src="@raw/plusyelow"
        />

    <ImageButton
        android:id="@+id/menosyelow"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_below="@+id/maisyelow"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20sp"
        android:layout_marginStart="40sp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerCrop"
        android:src="@raw/minusyelow"
        />

    <ImageButton
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="160sp"
        android:layout_marginEnd="160sp"
        android:alpha="0.3"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="centerCrop"
        android:src="@raw/circulo" />

</RelativeLayout>